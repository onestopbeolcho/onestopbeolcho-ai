rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /requests/{allPaths=**} {
      allow read: if request.auth != null; // 읽기는 인증된 사용자만
      allow write: if true; // 테스트용: 비회원도 쓰기 허용
    }
    match /{allPaths=**} {
      allow read, write: if request.auth != null; // 다른 경로는 인증 필요
    }
  }
}