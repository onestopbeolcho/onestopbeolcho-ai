rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /requests/{allPaths=**} {
      allow read: if true; // 누구나 읽기 가능 (비회원 포함)
      allow write: if request.resource.size < 5 * 1024 * 1024 && // 5MB 제한
                     request.resource.contentType.matches('image/.*'); // 이미지 파일만 허용
    }
    match /{allPaths=**} {
      allow read, write: if request.auth != null; // 다른 경로는 인증 필요
    }
  }
}